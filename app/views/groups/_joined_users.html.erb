<div class="container">
  <h4>参加済のユーザー一覧</h4>
  <% joined_users.each do |user| %>
  <div class="col-xs-offset-1 col-xs-10 bg-info" style="padding: 10px; margin-top: 10px; margin-bottom: 10px;">
    <div class="media">
    	<%= link_to user_path(user),class: "media-left media-middle" do %>
    		<%= image_tag(image?(user), size: "50x50",class:"img-circle" ) %>
    	<% end %>
    	<div class="media-body">
    		<h4 class="media-heading"><%= user.name %></h4>
    		<p><%= user.comment %></p>
    	</div>
    </div>
  </div>
  <% end %>
</div>

